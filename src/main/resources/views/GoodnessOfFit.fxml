<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700" prefWidth="900" stylesheets="@../styles/stylesheet.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.simulation.prng.controllers.variables.GoodnessOfFitController">

    <top>
        <VBox spacing="10" style="-fx-padding: 20; -fx-background-color: #e8f0d5;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #3f5133;" text="Goodness of Fit Tests" />
            <Label fx:id="lblHypothesis" style="-fx-font-size: 16px; -fx-text-fill: #526a3f;" text="H0: Data follows a [Name] distribution" />
        </VBox>
    </top>

    <center>
        <TabPane style="-fx-background-color: transparent;" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Chi-Square Test">
                    <VBox spacing="15" style="-fx-padding: 20;">
                        <TableView fx:id="tblChiSquare" stylesheets="@../styles/stylesheet.css" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colInterval" prefWidth="200" text="Interval / Class" />
                                <TableColumn fx:id="colObserved" prefWidth="150" text="Observed (Oi)" />
                                <TableColumn fx:id="colExpected" prefWidth="150" text="Expected (Ei)" />
                                <TableColumn fx:id="colChiTerm" prefWidth="150" text="(Oi - Ei)Â² / Ei" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>

                        <HBox alignment="CENTER_LEFT" spacing="30" style="-fx-padding: 10; -fx-background-color: rgba(255,255,255,0.5); -fx-background-radius: 10;">
                            <VBox spacing="5">
                                <Label styleClass="stats-label-title" text="Chi-Calculated" />
                                <Label fx:id="lblChiCalc" styleClass="stats-label-value" text="0.0000" />
                            </VBox>
                            <Region prefWidth="20" />
                            <VBox spacing="5">
                                <Label styleClass="stats-label-title" text="Chi-Critical (Alpha=0.05)" />
                                <Label fx:id="lblChiCrit" styleClass="stats-label-value" text="0.0000" />
                            </VBox>
                            <Region HBox.hgrow="ALWAYS" />
                            <VBox alignment="CENTER_RIGHT" spacing="5">
                                <Label styleClass="stats-label-title" text="Result" />
                                <Label fx:id="lblChiResult" style="-fx-font-weight: bold; -fx-font-size: 14px;" text="PENDING" />
                            </VBox>
                        </HBox>
                    </VBox>
                </Tab>

                <Tab text="K-S / A-D Tests">
                    <VBox spacing="15" style="-fx-padding: 20;">
                        <LineChart fx:id="chartKS" createSymbols="false" title="Empirical vs Theoretical CDF" VBox.vgrow="ALWAYS">
                            <xAxis>
                                <NumberAxis label="Value (x)" side="BOTTOM" />
                            </xAxis>
                            <yAxis>
                                <NumberAxis autoRanging="false" label="Cumulative Probability F(x)" lowerBound="0" side="LEFT" tickUnit="0.1" upperBound="1" />
                            </yAxis>
                        </LineChart>

                        <HBox alignment="CENTER_LEFT" spacing="30" style="-fx-padding: 10; -fx-background-color: rgba(255,255,255,0.5); -fx-background-radius: 10;">
                            <VBox spacing="5">
                                <Label styleClass="stats-label-title" text="D Statistic (K-S)" />
                                <Label fx:id="lblKSStat" styleClass="stats-label-value" text="0.0000" />
                            </VBox>
                            <Region prefWidth="20" />
                            <VBox spacing="5">
                                <Label styleClass="stats-label-title" text="K-S Critical Value" />
                                <Label fx:id="lblKSCrit" styleClass="stats-label-value" text="0.0000" />
                            </VBox>
                            <Region HBox.hgrow="ALWAYS" />
                            <VBox alignment="CENTER_RIGHT" spacing="5">
                                <Label styleClass="stats-label-title" text="K-S Result" />
                                <Label fx:id="lblKSResult" style="-fx-font-weight: bold; -fx-font-size: 14px;" text="PENDING" />
                            </VBox>
                        </HBox>
                    </VBox>
                </Tab>
            </tabs>
        </TabPane>
    </center>

</BorderPane>
